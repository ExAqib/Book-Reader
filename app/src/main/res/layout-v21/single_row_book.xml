<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="200dp"
    app:cardCornerRadius="10dp"
    android:elevation="15dp"
    android:layout_marginTop="7dp"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="3dp"
    app:layout_goneMarginTop="10dp"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <ImageView
        android:id="@+id/bookImage_single_row"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/book_logo">

    </ImageView>


    <TextView
        android:id="@+id/header_single_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="BookName"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/bookImage_single_row"
        android:singleLine="true"
        >

    </TextView>
    <TextView
        android:id="@+id/footer_single_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/header_single_row"
        android:text="Author"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="normal"

        >
    </TextView>
  </RelativeLayout>
</androidx.cardview.widget.CardView>